<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="heu.iot.Dao.Inform_EmploeeMapper">
    <resultMap id="BaseResultMap" type="heu.iot.Model.Inform_Emploee">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="pic" jdbcType="VARCHAR" property="pic" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="topic" jdbcType="VARCHAR" property="topic" />
        <result column="date" jdbcType="VARCHAR" property="date" />
        <result column="type" jdbcType="INTEGER" property="type" />
        <result column="active" jdbcType="INTEGER" property="active" />
    </resultMap>
    <sql id="Base_Column_List">
        inform.id,emploee.pic,emploee.name,inform.topic,inform.date,inform.type,inform.active
    </sql>
    <select id="showRecent" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List" />
    from inform,emploee
    WHERE inform.iid=emploee.id and inform.active = 1 order by inform.id desc limit #{num,jdbcType=INTEGER}
    </select>

    <select id="showAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        from inform,emploee
        WHERE inform.iid=emploee.id and inform.active = 1 order by inform.id desc
    </select>

    <select id="showAdminAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        from inform,emploee
        WHERE inform.iid=emploee.id order by inform.id desc
    </select>

</mapper>